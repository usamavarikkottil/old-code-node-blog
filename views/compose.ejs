<%- include("partials/header") %>

<h1>Compose</h1>
<form action="/compose" method="post"><br>
    
    <div class="form-group">
        <label for="newTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" id="newTitle" placeholder="Enter title">
    </div>


    <div class="form-group">
        <label for="postBodyId">Contents</label>
        <textarea class="form-control" id="postBodyId" name="postBody" cols="80"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include("partials/footer") %>